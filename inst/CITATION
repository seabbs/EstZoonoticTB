citHeader("To cite EstZoonoticTB in publications use:")

citEntry(entry = "Article",
  title        = "EstZoonoticTB: an R package for estimating and visualising zoonotic TB",
  author       = personList(as.person("Sam Abbott")),
  journal      = "-",
  year         = "-",
  volume       = "-",
  number       = "-",
  pages        = "-",
  doi          = "-",

  textVersion  =
  paste("Sam Abbott (2019).",
        "EstZoonoticTB: an R package for estimating and visualising zoonotic TB",
        "",
        "")
)